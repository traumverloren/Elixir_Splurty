<table>
  <thead>
    <tr>
      <th>Saying</th>
      <th>Author</th>
      <th>Actions</th>
  </thead>
  <%= for q <- @quotes do %>
  <tr>
    <td>
    <a href="<%=quote_path(@conn, :show, q.id) %>">
      <%= q.saying %>
    </td>
    <td>
      <%= q.author %>
    </td>
    <td>
      <a href="<%=quote_path(@conn, :edit, q.id) %>">
        Edit
      </a>
      |
      <a href="<%= quote_path(@conn, :destroy, q.id) %>" data-method="DELETE" class="rest">
        Destroy
      </a>
    </td>
  </tr>
  <% end %>

</table>
